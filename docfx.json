{
  "build": {
    "content": [
      {
        "files": [ "**/*.md" ],
        "exclude": [ "obj/**", "docs/**" ]
      }
    ],
    "resource": [
      {
        "files": [ "**/*.png", "**/*.jpg", "**/*.ico" ],
        "exclude": [ "obj/**", "docs/**" ]
      }
    ],
    "dest": "docs",
    "noLangKeyword": false,
    "keepFileLink": false,
    "globalMetadata": {
      "_appFooter": "<span>Copyright Â© 2018 GHI Electronics, LLC<br>Generated by <strong>DocFX</strong></span>",
      "_appLogoPath": "images/logo.png",
      "_appFaviconPath": "images/favicon.ico",
      "_enableSearch": true,
      "_enableNewTab": true
    }
  }
}